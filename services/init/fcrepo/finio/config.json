{
  "typeMappers" : [{
    "id" : "collection",
    "types" : ["http://schema.org/Collection"],
    "basePath" : "/collection",
    "virtualIndirectContainers" : {
      "links" : {
        "http://www.w3.org/ns/ldp#hasMemberRelation" : "http://schema.org/hasPart",
        "http://www.w3.org/ns/ldp#isMemberOfRelation" : "http://schema.org/isPartOf"
      },
      "type" : "item"
    } 
  }],
  "default" : {
    "id" : "item",
    "basePath" : "/item"
  },
  "gcssync" : {
    "containers" : [
      {
        "bucket" : "dams-client-{{DATA_ENV}}",
        "basePath" : "/application/ucd-lib-client/item",
        "direction" : "fcrepo-to-gcs",
        "initDataHydration" : true
      },
      {
        "bucket" : "dams-client-{{DATA_ENV}}",
        "basePath" : "/application/ucd-lib-client/collection",
        "direction" : "fcrepo-to-gcs",
        "initDataHydration" : true
      },
      {
        "bucket" : "dams-client-products",
        "basePath" : "/application/ucd-lib-client/workflow-products",
        "direction" : "gcs-to-fcrepo",
        "proxyBinary" : true,
        "initDataHydration" : true
      }
    ]

  }
}